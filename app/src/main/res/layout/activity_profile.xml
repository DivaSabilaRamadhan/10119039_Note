<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/judul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Mahasiswa"
        android:textSize="38sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#0097e6"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/diva"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@id/judul2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/diva"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Nama  : Diua Sabila Ramadhan"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_below="@id/diva"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/nim"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="NIM      : 10119039 "
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_below="@id/nama"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/kelas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Kelas    : IF-1"
        android:textSize="23sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nim"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

</RelativeLayout>